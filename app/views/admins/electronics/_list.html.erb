<table class='table table-bordered table-hover electronics-table'>
	<thead class='table-warning'>
		<tr>
		  <th class='text-center' style='width: 15%'>投稿ID</th>
			<th class='text-center' style='width: 15%'>家電画像</th>
			<th class='text-center' style='width: 20%'>カテゴリ名</th>
			<th class='text-center' style='width: 18%'>登録日</th>
			<th class='text-center' style='width: 18%'>更新日</th>
			<th class='text-center' style='width: 14%'>詳細内容</th>
    </tr>
	</thead>
	<tbody>
    <% electronics.each do |electronics| %>
    <tr>
      <th class='text-center'><%= electronics.id %></th>
	    <td class='text-center'>
        <%= attachment_image_tag electronics, :image, :fill, 50, 50, fallback: 'none_image.jpg', size:'50x50' %>
      </td>
      <td><%= electronics.category.category_name %></td>
      <td class='text-center'><%= electronics.created_at.strftime('%Y/%m/%d') %></td>
      <td class='text-center'><%= electronics.updated_at.strftime('%Y/%m/%d') %></td>
      <td class='text-center'><%= link_to '詳細',admins_electronics_path(electronics.id), class:'btn btn-outline-success' %></td>
    </tr>
    <% end %>
  </tbody>
</table>